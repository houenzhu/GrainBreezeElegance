<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhe.grain.mapper.commodity.PlantInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zhe.grain.domain.commodity.PlantInfo">
        <id column="plant_id" property="plantId" />
        <result column="plant_name" property="plantName" />
        <result column="cover_image" property="coverImage" />
        <result column="adoption_details" property="adoptionDetails" />
        <result column="care_details" property="careDetails" />
        <result column="suitable_temperature" property="suitableTemperature" />
        <result column="status" property="status" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="min" property="min"/>
        <result column="max" property="max"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        plant_id, plant_name, cover_image, adoption_details, care_details,
        suitable_temperature, `status`, created_at, updated_at, min, max
    </sql>

</mapper>
